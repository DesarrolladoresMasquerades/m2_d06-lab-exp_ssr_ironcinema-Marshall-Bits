<div class="card mb-3" style="max-width: 740px;">
    <div class="row g-0">
        <div class="col-md-4">
            <img src="{{image}}" class="img-fluid rounded-start" alt="{{title}}">
        </div>
        <div class="col-md-7">
            <div class="card-body">
                <h2 class="card-title">{{title}}</h2>
                <p class="card-text">
                    {{description}}
                <ul>
                    {{#each stars}}
                    <li>
                        {{this}}
                    </li>
                    {{/each}}
                </ul>
                {{#each showtimes}}
                | {{this}} |
                {{/each}}
                </p>
            </div>
        </div>
    </div>
</div>
<a class="btn btn-light" href="/movies">Back to movies</a>